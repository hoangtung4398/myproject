@model IEnumerable<BaseCourse.Dto.ListSectionDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Section</h1>

<p>

    <a class="btn btn-success" asp-action="Create" asp-route-id="@ViewBag.Id">Create</a> |
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualityLecture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QualityLecture)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Lecture</a>|
                </td>
            </tr>
        }
    </tbody>
</table>
