@model IPagedList<BaseCourse.Dto.ListCourseDto>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Course</h1>

<p>
    <a class="btn btn-success" asp-action="Create">New Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                @Html.DisplayName("Lecture")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QualityLecture)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>|
                    <a class="btn btn-secondary" asp-action="Sections" asp-route-id="@item.Id">Sections</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    @Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", "Course", new { page = page }), new PagedListRenderOptions(){ LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
</div>
